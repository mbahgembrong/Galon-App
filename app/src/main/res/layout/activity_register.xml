<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent" android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        tools:context=".ui.login.RegisterActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" android:padding="16dp">
        <TextView
                android:text="Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textStyle="bold" android:textSize="16sp"
                android:id="@+id/textView"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/inputTextUsername" android:hint="Masukkan Username" android:minHeight="48dp"/>
        <TextView
                android:text="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textStyle="bold" android:textSize="16sp"
                android:id="@+id/textView4" android:layout_marginTop="16dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/inputTextPassword2" android:hint="Masukkan Password" android:minHeight="48dp"
                android:password="true"
                app:passwordToggleEnabled="true"/>
        <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="?android:attr/listDivider"
        />
        <TextView
                android:text="Nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textStyle="bold" android:textSize="16sp"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/inputTextNama" android:hint="Masukkan Nama" android:minHeight="48dp"/>
        <TextView
                android:text="Tempat dan Tanggal Lahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textStyle="bold" android:textSize="16sp"
                android:layout_marginTop="16dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/inputTextTempatLahir" android:hint="Masukkan Tempat Lahir"
                android:minHeight="48dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Tanggal Lahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/buttonTanggalLahir"
                    android:layout_weight="1" android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textTanggalLahir"
                    android:layout_weight="1" android:layout_marginStart="8dp" android:visibility="gone"/>
        </LinearLayout>
        <TextView
                android:text="Jenis Kelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textStyle="bold" android:textSize="16sp"
                android:id="@+id/textView8"
                android:layout_marginTop="16dp"/>

        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/radioJeniskelamin"
                android:orientation="horizontal">
            <RadioButton
                    android:text="Laki Laki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioLakiLaki" android:layout_weight="1"/>
            <RadioButton
                    android:text="Perempuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioPerempuan" android:layout_weight="1"/>
        </RadioGroup>
        <TextView
                android:text="Desa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textStyle="bold" android:textSize="16sp"
                android:id="@+id/textView9"
                android:layout_marginTop="16dp"/>
        <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/inputTextDesa"
                android:minHeight="48dp" android:hint="Masukkan Desa"/>
        <TextView
                android:text="Alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textStyle="bold" android:textSize="16sp"
                android:id="@+id/textView10"
                android:layout_marginTop="16dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/inputTextAlamat" android:hint="Masukkan Alamat"
                android:minHeight="48dp" android:singleLine="false"
                android:inputType="textMultiLine" android:minLines="2"/>
        <Button
                android:text="Register"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonRegister"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
