<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="16dp">
    <TextView
            android:text="bayu"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textNamaUserListOrderKurir"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textDesaUserListOrderKurir" android:textColor="@color/black"
            android:textStyle="bold" android:textSize="20sp"/>
    <TextView
            android:text="Desa : Jabon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:id="@+id/textDesaUserListOrderKurir"
            app:layout_constraintTop_toTopOf="@+id/textNamaUserListOrderKurir"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/black" android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textNamaUserListOrderKurir"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textAlamatUserListOrderKurir"
            android:minLines="2"
            android:singleLine="false" app:layout_constraintTop_toBottomOf="@+id/textNamaUserListOrderKurir"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toStartOf="@+id/buttonDrive"
            android:layout_marginEnd="8dp" android:textColor="@color/black"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textDateListOrderKurir"
            app:layout_constraintTop_toBottomOf="@+id/textAlamatUserListOrderKurir"
            app:layout_constraintEnd_toEndOf="@+id/textAlamatUserListOrderKurir"
            app:layout_constraintStart_toStartOf="@+id/textAlamatUserListOrderKurir" android:layout_marginTop="8dp"
            android:textColor="@color/black"/>
    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="40dp" android:layout_height="40dp"
                                                  android:src="@drawable/ic_telegram"
                                                  app:layout_constraintTop_toBottomOf="@+id/textDesaUserListOrderKurir"
                                                  android:id="@+id/buttonDrive" android:layout_marginTop="8dp"
                                                  app:layout_constraintEnd_toEndOf="@+id/textDesaUserListOrderKurir"
                                                  app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
