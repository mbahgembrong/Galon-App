<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:layout_margin="16dp"
                                                   android:background="@drawable/bg_rounded_stroke">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/ic_baseline_add_shopping_cart_24"
            android:id="@+id/imageView2" android:padding="16dp" android:background="@color/purple_500"
            android:tint="@color/white" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textNamaLaporan"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:textColor="@color/black"
            android:textSize="16sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textDataLaporan"
            app:layout_constraintStart_toStartOf="@+id/textNamaLaporan"
            app:layout_constraintEnd_toEndOf="@+id/textNamaLaporan"
            app:layout_constraintTop_toBottomOf="@+id/textNamaLaporan" android:textSize="20sp"
            android:textStyle="bold" android:textColor="@color/black" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
